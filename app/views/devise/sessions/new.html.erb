<div class=text-center>

  <div class="container fromstyle">


    <div class=" col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="fstyle">
      <h2>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, class: 'login-form-input' %>
        <%= f.input :password, required: false, class:'login-form-input' %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="formbutton form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>

    <div class="signup">
     <%= render "devise/shared/links" %>
   </div>
   </div>
 </div>

</div>

</div>
